# ===========================================
# ExploreNYC - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your actual API keys

# ===========================================
# REQUIRED: Cohere API Configuration
# ===========================================
# Get your API key from: https://dashboard.cohere.ai/api-keys
COHERE_API_KEY=your_cohere_api_key_here

# ===========================================
# OPTIONAL: LangChain Configuration
# ===========================================
# Enable tracing for debugging and monitoring
LANGCHAIN_TRACING_V2=true
# Get your API key from: https://smith.langchain.com/
LANGCHAIN_API_KEY=your_langchain_api_key_here

# ===========================================
# OPTIONAL: NYC Open Data API
# ===========================================
# Get your token from: https://data.cityofnewyork.us/profile/app_tokens
NYC_APP_TOKEN=your_nyc_open_data_token_here

# ===========================================
# OPTIONAL: Event Platform APIs
# ===========================================
# Eventbrite API for event discovery
# Get your key from: https://www.eventbrite.com/platform/api-keys/
EVENTBRITE_API_KEY=your_eventbrite_key_here

# Meetup API for local events
# Get your key from: https://secure.meetup.com/meetup_api/key/
MEETUP_API_KEY=your_meetup_key_here

# ===========================================
# OPTIONAL: Additional Event Sources
# ===========================================
# Facebook Events API (if needed)
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# Google Places API for venue information
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# ===========================================
# OPTIONAL: Database Configuration
# ===========================================
# For future database integration
DATABASE_URL=postgresql://username:password@localhost:5432/explorenyc

# ===========================================
# OPTIONAL: Redis Configuration
# ===========================================
# For caching and session management
REDIS_URL=redis://localhost:6379/0

# ===========================================
# OPTIONAL: Email Configuration
# ===========================================
# For sending event notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# ===========================================
# OPTIONAL: Analytics and Monitoring
# ===========================================
# Google Analytics tracking
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Set to 'development' for local development
ENVIRONMENT=development

# Enable debug mode
DEBUG=true

# ===========================================
# NOTES
# ===========================================
# 1. Only COHERE_API_KEY is required for basic functionality
# 2. All other keys are optional and enhance specific features
# 3. Never commit your actual .env file to version control
# 4. Keep your API keys secure and rotate them regularly
# 5. Check the README.md for detailed setup instructions
